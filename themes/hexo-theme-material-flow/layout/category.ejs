<article id="archive-page" class="post article white-box">
  <section class='meta'>
    <h2 class="title">
      <a href="javascript:void(0)">
        <%= page.category %>
      </a>
    </h2>
  </section>
  <section class="archive">
    <%
        var year = -1, postid = -1;
        page.posts.sort('title', 1).each(function(post) {
          post.year = date(post.date, 'YYYY');
         %>
        <div class="archive-item archive-post mark">
          <a href="<%= url_for(post.path) %>">
            
            <span class="title">
              <span>
                <%= date(post.date,"YYYY-MM-DD")+" "+post.title %>
              </span>
            </span>
          </a>
        </div>
        <% }); %>
  </section>
</article>
